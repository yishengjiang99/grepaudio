{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./build/",
		"noImplicitAny": false,
		"lib": ["ES2018.AsyncGenerator", "DOM", "ESNext"],
		"sourceMap": true,
		"module": "ESnext",
		"target": "es2017",
		"moduleResolution": "node",
		"jsx": "react",
		"allowJs": true
	},
	"exclude": ["./public", "node_modules"],
	"include": ["./src/**/*"]
}
